{
    "lexicon": 1,
    "id": "gg.campground.profile.post",
    "defs": {
        "main": {
            "type": "record",
            "description": "A declaration of a Campground profile post.",
            "key": "tid",
            "record": {
                "type": "object",
                "required": ["content"],
                "properties": {
                    "parentUri": {
                        "type": "string",
                        "format": "at-uri"
                    },
                    "content": {
                        "type": "string",
                        "description": "Free-form profile description text.",
                        "maxGraphemes": 5000,
                        "maxLength": 50000
                    },
                    "tags": {
                        "type": "array",
                        "description": "Tags that associate keywords to the profile post.",
                        "items": [
                            { "type": "string" }
                        ]
                    },
                    "replies": {
                        "type": "array",
                        "description": "Replies to the post.",
                        "items": [
                            { "type": "string", "format": "at-uri" }
                        ]
                    },
                    "createdAt": { "type": "string", "format": "datetime" },
                    "updatedAt": { "type": "string", "format": "datetime" }
                }
            }
        }
    }
}