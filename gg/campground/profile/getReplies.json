{
  "lexicon": 1,
  "id": "gg.campground.profile.getPosts",
  "defs": {
    "main": {
      "type": "query",
      "description": "Get replies to the post.",
      "parameters": {
        "type": "params",
        "required": ["uri"],
        "properties": {
          "uri": {
            "type": "string",
            "format": "at-uri",
            "description": "URI of the post to get replies of."
          },
          "limit": {
            "type": "integer",
            "description": "The amount of replies (or less if there are not enough replies) to fetch.",
            "maximum": 100,
            "minimum": 1
          },
          "offset": {
            "type": "integer",
            "description": "The amount of latest replies to ignore."
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["posts"],
          "properties": {
            "posts": {
              "type": "array",
              "items": {
                "type": "ref",
                "ref": "gg.campground.actor.defs#profilePostViewBasic"
              }
            }
          }
        }
      }
    }
  }
}