{
  "lexicon": 1,
  "id": "gg.campground.profile.defs",
  "defs": {
    "profilePostViewBasic": {
      "type": "object",
      "required": ["cid", "uri", "author", "replyCount", "tags", "content"],
      "properties": {
        "cid": {
          "type": "string",
          "format": "cid"
        },
        "uri": {
          "type": "string",
          "format": "at-uri"
        },
        "author": {
          "type": "ref",
          "ref": "gg.campground.actor.defs#profileViewBasic"
        },
        "content": {
          "type": "string",
          "description": "Free-form profile description text.",
          "maxGraphemes": 5000,
          "maxLength": 50000
        },
        "tags": {
          "type": "array",
          "description": "Tags that associate keywords to the profile post.",
          "items": [
            { "type": "string" }
          ]
        },
        "replyCount": {
          "type": "integer"
        },
        "createdAt": { "type": "string", "format": "datetime" },
        "updatedAt": { "type": "string", "format": "datetime" },
        "indexedAt": { "type": "string", "format": "datetime" }
      }
    },
    "profilePostViewDetailed": {
      "type": "object",
      "required": ["cid", "uri", "author", "tags", "replies", "content"],
      "properties": {
        "cid": {
          "type": "string",
          "format": "cid"
        },
        "uri": {
          "type": "string",
          "format": "at-uri"
        },
        "author": {
          "type": "ref",
          "ref": "gg.campground.actor.defs#profileViewBasic"
        },
        "content": {
          "type": "string",
          "description": "Free-form profile description text.",
          "maxGraphemes": 5000,
          "maxLength": 50000
        },
        "tags": {
          "type": "array",
          "description": "Tags that associate keywords to the profile post.",
          "items": [
            { "type": "string" }
          ]
        },
        "replies": {
          "type": "array",
          "items": { "type": "ref", "ref": "#profilePostViewBasic" }
        },
        "createdAt": { "type": "string", "format": "datetime" },
        "updatedAt": { "type": "string", "format": "datetime" },
        "indexedAt": { "type": "string", "format": "datetime" }
      }
    }
  }
}