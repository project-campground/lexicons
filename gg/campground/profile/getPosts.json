{
  "lexicon": 1,
  "id": "gg.campground.profile.getPosts",
  "defs": {
    "main": {
      "type": "query",
      "description": "Get basic views (with additional parent property) of profile posts or profile post replies.",
      "parameters": {
        "type": "params",
        "required": ["actor"],
        "properties": {
          "actor": {
            "type": "string",
            "format": "did",
            "description": "DID of the user to get profile posts of."
          },
          "limit": {
            "type": "integer",
            "description": "The amount of posts (or less, if there are not enough replies) to fetch.",
            "maximum": 100,
            "minimum": 1
          },
          "offset": {
            "type": "integer",
            "description": "The amount of latest posts to ignore."
          },
          "replies": {
            "type": "boolean",
            "description": "Whether to include replies to posts."
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["posts"],
          "properties": {
            "posts": {
              "type": "array",
              "items": {
                "type": "ref",
                "ref": "gg.campground.actor.defs#profilePostViewParented"
              }
            }
          }
        }
      }
    }
  }
}