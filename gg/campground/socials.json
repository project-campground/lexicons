{
    "lexicon": 1,
    "id": "gg.campground.socials",
    "defs": {
        "main": {
            "type": "union",
            "refs": [
                "#twitter",
                "#instagram",
                "#tiktok",
                "#youtube",
                "#facebook",
                "#twitch",
                "#reddit",
                "#steam",
                "#bluesky",
                "#mastodon",
                "#roblox",
                "#website",
                "#github"
            ]
        },
        "twitter": {
            "type": "object",
            "required": ["handle", "userId"],
            "items": {
                "handle": { "type": "string" },
                "userId": { "type": "string" }
            }
        },
        "instagram": {
